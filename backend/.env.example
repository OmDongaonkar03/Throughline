# ================================
# Server Configuration
# ================================
PORT=3000
NODE_ENV="development"        # use "production" in prod
TZ="Asia/Kolkata"

# ================================
# Application URLs (Public)
# ================================
API_URL="http://your_backend_url:3000"       # public backend URL
FRONTEND_URL="http://your_frontend_url:5173" # public frontend URL

# ================================
# Database Configuration
# ================================
DATABASE_URL="your_database_connection_string"

# ================================
# JWT Configuration
# ================================
JWT_SECRET="your_jwt_secret_key"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key"

# ================================
# Google OAuth Configuration
# ================================
GOOGLE_CLIENT_ID="your_google_client_id_key"
GOOGLE_CLIENT_SECRET="your_google_client_secret_key"
GOOGLE_CALLBACK_URL="http://your_backend_url:3000/auth/google/callback"

# ================================
# LLM Configuration
# ================================
LLM_PROVIDER="your_llm_provider"   # e.g. gemini | openai | ollama
LLM_MODEL="your_llm_model"

# Only for Ollama provider
OLLAMA_HOST="http://your_ollama_host_url:11434"

# Ollama local setup example:
# LLM_PROVIDER="ollama"
# LLM_MODEL="llama3.2:3b"
# OLLAMA_HOST="http://localhost:11434"

# ================================
# Email Configuration
# ================================
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your_mail_user"
MAIL_PASS="your_mail_app_password"   # 16-char app password from Google
MAIL_FROM="Throughline <your_mail_user>" # sender name + email
