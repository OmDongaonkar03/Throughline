# Server
PORT=3000
NODE_ENV="development"
TZ="Asia/Kolkata"

# CORS - comma-separated, no spaces
ALLOWED_ORIGINS="http://localhost:5173"

# Mode: "self-hosted" or "saas"
MODE="self-hosted"

# URLs (use HTTPS in production!)
API_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5173"

# Database
DATABASE_URL="mysql://user:password@localhost:3306/throughline"

# JWT secrets (generate with: openssl rand -base64 48)
JWT_SECRET="your_jwt_secret_min_32_chars"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_min_32_chars"
JWT_VERIFICATION_SECRET="your_jwt_verification_secret_min_32_chars"
JWT_PASSWORD_RESET_SECRET="your_jwt_password_reset_secret_min_32_chars"

# Google OAuth (get from: https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID="your_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_client_secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# Email - Resend (get key from: https://resend.com/api-keys)
RESEND_API_KEY="re_your_resend_api_key"
MAIL_FROM="Throughline <hello@yourdomain.com>"

# Cron (generate with: openssl rand -base64 32)
CRON_SECRET="your_cron_secret_min_32_chars"
# DISABLE_INTERNAL_CRON="false"

# Error tracking (optional)
# SENTRY_DSN="https://your_sentry_dsn@sentry.io/project"

# LLM - Pick ONE provider

# Groq (fast, free tier)
# GROQ_API_KEY="gsk_your_key"
# GROQ_MODEL="llama-3.3-70b-versatile"

# OpenRouter (access to many models)
# OPENROUTER_API_KEY="sk-or-v1-your_key"
# OPENROUTER_MODEL="meta-llama/llama-3.1-8b-instruct:free"

# Google Gemini
# GOOGLE_GENERATIVE_AI_API_KEY="AIzaSy_your_key"
# GOOGLE_MODEL="gemini-2.0-flash-exp"

# OpenAI
# OPENAI_API_KEY="sk-proj-your_key"
# OPENAI_MODEL="gpt-4o-mini"

# Anthropic
# ANTHROPIC_API_KEY="sk-ant-your_key"
# ANTHROPIC_MODEL="claude-sonnet-4"

# SaaS mode (only if MODE=saas)
# SAAS_LLM_PROVIDER="groq"
# SAAS_GROQ_MODEL="llama-3.3-70b-versatile"

# Dev only - DO NOT use in production
# SKIP_RATE_LIMIT="false"
