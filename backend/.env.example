# Server Configuration
PORT=3000
NODE_ENV="development"        # use "production" in prod
TZ="Asia/Kolkata"             # Timezone for all users (beta version)

#CORS Configuration
ALLOWED_ORIGINS="http://localhost:5173" # comma-separated list of allowed origins

# Application Mode
MODE="self-hosted"            # "self-hosted" or "saas"
# Set to "saas" if you're running managed service with your API keys
# Set to "self-hosted" if users provide their own API keys

# Application URLs
API_URL="http://your_backend_url:3000"       # public backend URL
FRONTEND_URL="http://your_frontend_url:5173" # public frontend URL

# Database Configuration
DATABASE_URL="your_database_connection_string"

# JWT Configuration
JWT_SECRET="your_jwt_secret_key"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key"
JWT_VERIFICATION_SECRET="your_jwt_verification_secret_key"

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID="your_google_client_id_key"
GOOGLE_CLIENT_SECRET="your_google_client_secret_key"
GOOGLE_CALLBACK_URL="http://your_backend_url:3000/auth/google/callback"

# LLM Configuration (Choose one option - checked in priority order)

# --- OPTION 1: OpenRouter (Cloud) ---
# Get key from: https://openrouter.ai/keys
# OPENROUTER_API_KEY="your-openrouter-api-key"
# OPENROUTER_MODEL="meta-llama/llama-3.1-8b-instruct:free"  # Free model
# Other options: "anthropic/claude-3.5-sonnet", "openai/gpt-4o-mini", etc.

# --- OPTION 2: Google Gemini (Cloud) --
# Get key from: https://aistudio.google.com/app/apikey
# GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key"
# GOOGLE_MODEL="gemini-1.5-flash"  # or gemini-1.5-pro, gemini-2.0-flash-exp

# --- OPTION 3: OpenAI (Cloud) ---
# OPENAI_API_KEY="sk-proj-..."
# OPENAI_MODEL="gpt-4o-mini"  # or gpt-4o, gpt-4-turbo

# --- OPTION 4: Anthropic (Cloud) ---
# ANTHROPIC_API_KEY="sk-ant-..."
# ANTHROPIC_MODEL="claude-sonnet-4"  # or claude-opus-4

# For more options refer https://mastra.ai/models/providers

# SaaS Mode LLM Configuration
# (Only needed if MODE=saas)
# SAAS_LLM_PROVIDER="openrouter"    # "openrouter", "google", "openai", or "anthropic"
# SAAS_OPENROUTER_MODEL="meta-llama/llama-3.1-8b-instruct:free"
# SAAS_GOOGLE_MODEL="gemini-1.5-flash"
# SAAS_OPENAI_MODEL="gpt-4o-mini"
# SAAS_ANTHROPIC_MODEL="claude-sonnet-4"

# Scheduler Configuration
# Set to "true" to disable internal cron scheduler
# (use if you want to run cron jobs externally)
# DISABLE_INTERNAL_CRON="false"

# Email (SMTP) Configuration
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your_mail_user"
MAIL_PASS="your_mail_app_password"   # 16-char app password from Google
MAIL_FROM="Throughline <your_mail_user>" # sender name + email