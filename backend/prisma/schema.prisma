generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  password      String?
  googleId      String?        @unique
  profilePhoto  String?
  refreshTokens RefreshToken[]
  createdAt     DateTime
  updatedAt     DateTime

  @@index([email])
  @@index([googleId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime

  @@index([userId])
  @@index([token])
}